{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Alternating Bit",
            "type": "shell",
            "command": "gcc prog2.c -o prog2 -w",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Go-Back-N",
            "type": "shell",
            "command": "gcc prog2_gbn.c -o prog2_gbn -w",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}